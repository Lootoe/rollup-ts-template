{
    // 关闭保存自动格式化以禁用Prettier
    "editor.formatOnSave": false,
    // 输入一行后是否自动格式化
    "editor.formatOnType": true,
    "eslint.codeAction.showDocumentation": {
      "enable": true
    },
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true,
    },
    "eslint.validate": [
      "javascript",
      "javascriptreact",
      "html",
      "vue"
    ],
  }